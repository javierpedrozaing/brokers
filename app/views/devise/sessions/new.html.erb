<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Login</h2>
  <div class="form-outline mb-4">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "form2Example1"  %>
  </div>

   <div class="form-outline mb-4">    
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password",  class: "form-control" %>    
  </div>
  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>
    </div>
    <div class="col">
      <!-- Simple link -->
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    </div>
  </div>  
  <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4 login" %>

  <!-- Register buttons -->
  <div class="text-center">
    <p>No tienes cuenta? <%= link_to "Registrate aquÃ­", new_registration_path(resource_name) %><br /></p>
    
