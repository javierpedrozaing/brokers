<div class="agents-container">  
  <h2>Agents list</h2>
  <div class="list">
  <div class="actions d-grid col-10 justify-content-md-start">
    <%= link_to "New Agent", new_agent_path, class: "btn btn-primary mb-4" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">name</th>
        <th scope="col">email</th>
        <th scope="col">phone</th>
        <th scope="col">User status</th>
        <th scope="col"># clients</th>        
      </tr>
    </thead>
    <tbody>
    <% count = 0 %>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= count += 1 %></td>        
        <td><%= link_to agent.full_name, show_agent_path(agent.user.id)  %></td>
        <td><%= agent.user.email %></td>
        <td><%= agent.user.phone %></td>
        <td><%= agent.user.user_state %></td>
        <td><%= agent.clients.count %></td>        
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
